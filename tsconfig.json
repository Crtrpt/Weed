{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "include": [
    "./src/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}